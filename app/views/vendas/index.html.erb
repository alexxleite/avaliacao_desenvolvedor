<p id="notice"><%= notice %></p>

<h1>Listing Vendas</h1>

<table>
  <thead>
    <tr>
      <th>Comprador</th>
      <th>Descricao</th>
      <th>Preco unitario</th>
      <th>Quantidade</th>
      <th>Endereco</th>
      <th>Fornecedor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendas.each do |venda| %>
      <tr>
        <td><%= venda.comprador %></td>
        <td><%= venda.descricao %></td>
        <td><%= venda.preco_unitario %></td>
        <td><%= venda.quantidade %></td>
        <td><%= venda.endereco %></td>
        <td><%= venda.fornecedor %></td>
        <td><%= link_to 'Show', venda %></td>
        <td><%= link_to 'Edit', edit_venda_path(venda) %></td>
        <td><%= link_to 'Destroy', venda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

